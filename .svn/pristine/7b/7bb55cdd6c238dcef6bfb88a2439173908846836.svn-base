// error handlers

// development error handler
// will print stacktrace
if (app.get('env') === 'development') {
    app.use(function(err, req, res, next) {
    	console.log(req.path+" env here has an error-------------------------");
        res.status(err.status || 500);
        if(err){
            console.log(err);
            res.render('error', {
                message: err.message,
                error: err
            });
        }
    });
}else{
	// production error handler
	// no stacktraces leaked to user
	app.use(function(err, req, res, next) {
		res.status(err.status || 500);
		var msg = err.status==404?"页面未找到":"服务器错误";
		res.render('error_online', {
			message: err.message,
			status:err.status,
			error: msg
		});
	});
}
function regModules(modules){
    var addModule = function(ab){
        app.use("/"+ab,require("./routes/"+ab));
    };
    if(modules instanceof Array){
        for(var i=0;i< modules.length;i++){
            addModule(modules[i]);
        }
    }
}
//时间格式化
Date.prototype.format = function(format){
    var o = {
        "M+" : this.getMonth()+1, //month
        "d+" : this.getDate(), //day
        "h+" : this.getHours(), //hour
        "m+" : this.getMinutes(), //minute
        "s+" : this.getSeconds(), //second
        "q+" : Math.floor((this.getMonth()+3)/3), //quarter
        "S" : this.getMilliseconds() //millisecond
    }
    if(!format){
        format = "yyyy-MM-dd hh:mm:ss";
    }
    if(/(y+)/.test(format)) {
        format = format.replace(RegExp.$1, (this.getFullYear()+"").substr(4 - RegExp.$1.length));
    }

    for(var k in o) {
        if(new RegExp("("+ k +")").test(format)) {
            format = format.replace(RegExp.$1, RegExp.$1.length==1 ? o[k] : ("00"+ o[k]).substr((""+ o[k]).length));
        }
    }
    return format;
};
String.prototype.limit = function(length){
	var temp = this.replace(/&nbsp;/ig, "").replace(/<[^>]+>/g,"");//去掉所有的html标记;
    if(temp.length>=length){
        return temp.substring(0,length)+"...";
    }
    return this;

};

var prepareRender = function(req,res,next){
	req.viewdir="";
    res.locals.pretty = true;
    if(req.query.__json==""){
        res._renderBack = res.render;
        res.render = function(view ,data){
            //防止处理信息返回给接口
            delete data["conditions"];
            delete data["pageUrl"];
            res.json(data);
        };
    }
	next();
};//设置渲染参数 拦截渲染

var formidable = require('formidable'),
    path = require('path');
var typeMap = {pic:"image/jpeg"};

exports.parse = function(req,res,type){

    var form = new formidable.IncomingForm();
    form.ecoding = "utf-8";
    form.keepExtensions = true;
    form.uploadDir = path.join(__dirname,"public/temp");
    form.parse(req, function (err, fields, files) {
        if (err) {
            console.log(err);
            res.send(500,{status:500,msg:"服务器出错"});
            return;
        }
        var img = files.image;
        if(!type){
            type="pic";
        }
        if(typeMap[type]!=img.type){
            return res.send(403,JSON.stringify({status:403,msg:"被禁止的文件类型"}));
        }
        var data={};
        data.status = 200;
        var pa = img.path;
        data.path = pa.substring(pa.indexOf("temp")-1).replace(/\\/g,"/");//注意不同操作系统目录符号的区别
        data.name=files.image.name;
        res.send(JSON.stringify(data));
    });
}